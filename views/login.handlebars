<div class="container-fluid p-5 background-login">
  <div class="row justify-content-center">
    <div
      class="card border-dark mb-3 bg-light shadow p-3 mb-5 rounded"
      style="max-width: 35rem; --bs-bg-opacity: .90;"
    >
      <div class="card-body col-auto">
        <h1 class="card-title">
          Login Below
        </h1>
        <div class="mb-2">
          <form class="login-form">
            <div class="col-sm-12 col-form-label">
              <label for="user-login" class="form-label">
                Username:
              </label>
              <input
                type="username"
                class="form-control"
                id="user-login"
                placeholder="Enter your Username"
              />
            </div>
            <div class="col-sm-12 col-form-label mb-3">
              <label for="password-login">
                Password:
              </label>
              <input
                type="password"
                class="form-control"
                id="password-login"
                placeholder="Enter your password"
              />
            </div>
            <div class="col-sm-10">
              <button type="submit" class="btn btn-primary mb-3">
                Login
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
<script src="/javascript/login.js"></script>