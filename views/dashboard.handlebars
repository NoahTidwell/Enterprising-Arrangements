<div class="col-lg-7 col-md-12 col-sm-12 mt-3">
      <h2 class="text-center bg-light rounded-3">Your Venues</h2>
  <div class="m-3">

{{!-- <div class="row"> --}}

<div class="row bg-dark rounded-3" id="target">

  

          {{#if dvenues.venues.length}}
            {{#each dvenues.venues as |venue|}}

<div
    class="card m-2 card-border border-1 mb-5 rounded,"
    style="max-width: 20rem;"> 

    <h5 class="card-header text-center text-white bg-primary">
      {{name}}
    </h5>

  <div>
    <h6 class="text-center">
      {{venuetype.type_name}}
    </h6>
  </div>
  <div>
    <p class="card-text">
      {{comments}}
    </p>
  <div>
      <ul class="list-group list-group-flush">
        <li class="list-group-item text-center">
          <a href="{{url}}">
            {{url}}
          </a>
        </li>
        <li class="list-group-item list-group-flush">
          {{street}}
          ,
          <br>
          {{city}}
          ,
