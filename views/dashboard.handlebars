<!--Form Data-->
       <div class="col-lg-4 col-sm-12 ml-2 mt-3 background-grey rounded-2 ">

  <h2 class="text-center">Create New Venue</h2>
  <p class="text-center">Enter your details below to create a new venue</p>

  <form class="new-post-form">
            <!--Venue Name-->
            <div class="col-sm-12 col-form-label mb-3">
              <label for="name">Name of Venue:</label>
              <input type="name" class="form-control" id="name" placeholder="Enter Name of Venue" />
            </div>

            <!--Venue Type-->
            <div class="col-sm-12 col-form-label mb-3">
              <label for="venuetype.type_name">Type of Venue: </label>
              <select id="venuetype">
                {{#if dvenues.typevenues.length}}
                   {{#each dvenues.typevenues as |typevenues|}}
                    <!--generate all type Venues options-->
                        <option value={{typevenues.id}}>{{typevenues.type_name}}</option>
                    {{/each}}
                  {{/if}}
              </select>
            </div>

            <!--Description Type-->
            <div class="col-sm-12 col-form-label mb-3">
              <label for="comments">Description of Venue:</label>
              <textarea type="comments" id="comments" placeholder="Enter a description of your Venue" class="form-control" rows="5"></textarea>
            </div>

            
            <!--Venue URL-->
            <div class="col-sm-12 col-form-label mb-3">
              <label for="url">Venue Website:</label>
              <input type="url" class="form-control" id="url" placeholder="Enter your Venue Website Address" />
            </div>


            <!--Street address-->
            <div class="col-sm-12 col-form-label mb-3">
              <label for="street" class="form-label">Street Address:</label>
              <input
                type="street"
                class="form-control"
                id="street"
                placeholder="Street Address" />
            </div>

            <!--City-->
            <div class="col-sm-12 col-form-label mb-3">
              <label for="city">City:</label>
              <input type="city" class="form-control" id="city" placeholder="Enter the City" />
            </div>

            <!--State-->
            <div class="col-sm-12 col-form-label mb-3">
              <label for="state">State:</label>
              <input type="state" class="form-control" id="state" placeholder="Enter the State" />
            </div>

  
          <!--Zipcode-->
            <div class="col-sm-12 col-form-label mb-3">
              <label for="zipcode">Zipcode:</label>
              <input type="zipcode" class="form-control" id="zipcode" placeholder="Enter the Zipcode" />
            </div>



          <!--Minimum Occupancy-->
            <div class="col-sm-12 col-form-label mb-3">
              <label for="min">Minimum number of Guest allowed</label>
              <input type="min" class="form-control" id="min" placeholder="Enter the Minimum number of Guest allowed" />
            </div>

          <!--Maximum Occupancy-->
             <div class="col-sm-12 col-form-label mb-3">
              <label for="max">Maximum number of Guest allowed</label>
              <input type="max" class="form-control" id="max" placeholder="Enter the Maximum number of Guest allowed" />
            </div>
            <div class="form-check">Does this venue accept 3rd party vendors?
              <br>
              <input class="form-check-input" type="radio" name="flexRadioDefault" value="1" id="flexRadioDefault1">
             <label class="form-check-label" for="flexRadioDefault1">
              Yes
              </label>
              </div>
              <div class="form-check">
              <input class="form-check-input" type="radio" name="flexRadioDefault" value="0" id="flexRadioDefault2" checked>
              <label class="form-check-label" for="flexRadioDefault2">
                No
              </label>
            </div>


          <!--Submit Button-->
            <div class="col-sm-10">
              <a href="/dashboard/{{venue.id}}"><button type="submit" class="btn btn-primary mb-3">Create Venue</button></a>
            </div>
            </form>
</div>
</div>

