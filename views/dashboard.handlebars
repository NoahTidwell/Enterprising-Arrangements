
<section class="container-fluid">
    <div class="row mt-3">
      <h1 class="text-center bg-light">Dashboard</h1>
        <div class="col-lg-4 mt-2 m-4">

  <h2>Create New Venue</h2>
  <p>Enter your details below to create a new venue</p>

  <form class="new-post-form">
            <!--Venue Name-->
            <div class="col-sm-12 col-form-label mb-3">
              <label for="name">Name of Venue:</label>
              <input type="name" class="form-control" id="name" placeholder="Enter Name of Venue" />
            </div>

            <!--Venue Type-->
            <div class="col-sm-12 col-form-label mb-3">
              <label for="venuetype.type_name">Type of Venue:</label>
              <input type="venuetype.type_name" class="form-control" id="venuetype.type_name" placeholder="Enter your Venue Type" />
            </div>

            
            <!--Venue URL-->
            <div class="col-sm-12 col-form-label mb-3">
              <label for="url">Venue Website:</label>
              <input type="url" class="form-control" id="url" placeholder="Enter your Venue Type" />
            </div>


                          
            <!--Street address-->
            <div class="col-sm-12 col-form-label mb-3">
              <label for="street" class="form-label">Street Address:</label>
              <input
                type="street"
                class="form-control"
                id="street"
                placeholder="Street Address" />
            </div>

            <!--City-->
            <div class="col-sm-12 col-form-label mb-3">
              <label for="city">City:</label>
              <input type="city" class="form-control" id="city" placeholder="Enter a Phone number" />
            </div>

            <!--State-->
            <div class="col-sm-12 col-form-label mb-3">
              <label for="state">State:</label>
              <input type="state" class="form-control" id="state" placeholder="Enter the State" />
            </div>

  
          <!--Zipcode-->
            <div class="col-sm-12 col-form-label mb-3">
              <label for="zipcode">State:</label>
              <input type="zipcode" class="form-control" id="zipcode" placeholder="Enter the Zipcode" />
            </div>



          <!--Minimum Occupancy-->
            <div class="col-sm-12 col-form-label mb-3">
              <label for="min">Minimum Occupancy</label>
              <input type="min" class="form-control" id="min" placeholder="Enter a Minimum Occupancy" />
            </div>

          <!--Maximum Occupancy-->
             <div class="col-sm-12 col-form-label mb-3">
              <label for="max">Maximum Occupancy</label>
              <input type="max" class="form-control" id="max" placeholder="Enter a Minimum Occupancy" />
            </div>

