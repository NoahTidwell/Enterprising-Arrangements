
<section class="container-flex">
    <div class="row mt-3">
        <h1 class="text-center bg-light">Dashboard</h1>
    <main class="col-lg-3 mt-2">

<div class="m-2">
  <h2>Create New Venue</h2>
  <p>Enter your details below to create a new venue</p>

{{!-- <a href="/cards/{{post.id}}"></a> --}}

  <form class="new-post-form">
    <div>
      <label for="title">Title</label>
      <input type="text" id="title" name="title" />
    </div>
    <div>
      <label for="url">Link</label>
      <input id="url" name="url" />
    </div>
    <button type="submit" class="btn btn-md btn-primary m-2">Create</button>
  </form>

  </div>
</main>
<div class="col-lg-9">
  <div class="row m-1">
      <h2 class="text-center mt-3">Venues</h2>
        {{#if dvenues.length}}
          <ol>
            {{#each dvenues as |venue|}}
            <li>
              {{>single-card venue}}
              <a href="/dashboard/edit/{{venue.id}}" class="edit-link">Edit Venue</a>
            </li>
            {{/each}}
          </ol>
        {{/if}}
 </div>
</section>
<script src="/javascript/addcard.js"></script>