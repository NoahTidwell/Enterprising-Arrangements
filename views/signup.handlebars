<div class="container-fluid p-5">
  <div class="row justify-content-center">

    <div
      class="card border-dark mb-3 bg-light shadow p-3 mb-5 rounded"
      style="max-width: 35rem; --bs-bg-opacity: .8;"
    >
      <div class="card-body col-auto">
        <h1 class="card-title">Sign-Up Below</h1>
        <div class="mb-2">

          <form class="login-form">
            <div class="col-sm-12 col-form-label">
              <label for="username-signup">Username:</label>
              <input
                type="text"
                class="form-control"
                id="username-signup"
                placeholder="Enter a username"
              />
              </div>

              <label for="email-signup" class="form-label">Email:</label>
              <input
                type="email"
                class="form-control"
                id="email-signup"
                placeholder="name@example.com"
              />
            </div>
            <div class="col-sm-12 col-form-label mb-3">
              <label for="password-login">Password:</label>
              <input type="password" class="form-control" id="password-login" placeholder="Enter a password" />
            </div>
            <div class="col-sm-10">
              <button
                type="submit"
                class="btn btn-primary mb-3"
              >Sign-Up</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

<script src="/javascript/signup.js"></script>